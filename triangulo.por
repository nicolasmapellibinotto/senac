programa {
  funcao inicio() {
   //Variáveis
   real base, altura, area 
   //Ler a base
   escreva("Digite a base do triângulo: ") 
   leia(base)
   //Ler a altura
   escreva("Digite a altura do triângulo: ")
   leia(altura)
   //Cálculo a área
   area = (base *altura)/2
   //escreva o resultado
   escreva("A área do triangulo: ",area)
  }
}
